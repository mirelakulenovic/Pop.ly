@model IEnumerable<Pop.ly.Models.Database.Movie>
@{
    ViewBag.Title = "ManageMovies";
}


<div class="container pt-4 mt-4">
    @Html.ActionLink("Add Movie", "AddMovie", "Administration")
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Title</th>
                <th scope="col">Cost</th>
                <th scope="col">Orders</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <th scope="row">@movie.ID</th>
                    <td><a href="/Movie/?T=@movie.Title&Y=@movie.ReleaseYear">@movie.Title</a></td>
                    <td>@movie.Price</td>
                    <td>PLACEHOLDER</td>
                    <td>Edit | Delete</td>
                </tr>
            }
        </tbody>
    </table>
</div>