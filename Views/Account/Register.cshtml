@model Pop.ly.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}



<div class="container py-5">
    <div class="row h-100 justify-content-center align-items-center registration-card">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-group-row", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Create a new account.</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName)
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "First Name" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Last Name" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.BillingAddress, new { @class = "form-control", @placeholder = "Address" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.BillingZip, new { @class = "form-control", @placeholder = "Zip Code" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.BillingCity, new { @class = "form-control", @placeholder = "City" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "email@address.com", @type = "email" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Password again" })
            </div>
            <div class="form-group text-center">
                <input type="submit" class="btn btn-success" value="Register" />
            </div>

        }

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
</div>